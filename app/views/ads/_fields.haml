=form_for @ad, builder: WithErrorFields, url: '/ads' do |f|
  =f.label_with_error :title
  =f.text_field :title
  =f.label_with_error :path, "Target"
  =f.text_field :path
  =f.label :ppc, "Pay per Click?"
  =f.check_box :ppc
  =f.label :bid
  =f.number_field :bid
  %p.muted (0.001 BTC for not PPC, 0.05 for PPC)
  =f.label_with_error :body
  =f.text_area :body, rows: 4
  %br/
  =f.submit