!!! 5
%html
  %head
    %title
      =yield(:title)
      TorSearch
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = #stylesheet_link_tag params[:controller], media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags

  %body
    .container
      -unless defined?(@nav) && @nav == false
        %ul.nav.nav-tabs
          %li{class: (request[:controller] == 'search') ? ' active' : ''}= link_to "Search", search_path
          %li{class: (request[:action] == 'contact') ? ' active' : ''}= link_to "Contact", contact_path
          %li{class: (request[:action] == 'policies') ? ' active' : ''}= link_to "Policies", policies_path
      -unless notice.nil? && alert.nil?
        .row.span12
          - if flash[:alert]
            #flash_alert.alert
              .center-edge.shadow
                = flash[:alert]
          - if flash[:notice]
            #flash_alert.notice
              .center-edge.shadow
                = flash[:notice]
      .row
        .span12
          = yield
    .container
      =yield(:footer)
    =yield(:javascripts)
  =render partial: 'analytics'