!!! 5
%html
  %head
    %title
      =yield(:title)
      TorSearch
    = stylesheet_link_tag    "application", media: "all"
    = #stylesheet_link_tag params[:controller], media: "all", "data-turbolinks-track" => true
    = csrf_meta_tags
    -if Rails.env == 'development'
      :css
        .translation_missing::before {
          content: "[missing: ";
        }
        .translation_missing::after {
          content: " ]";
        }
        .translation_missing {
          display: inline-block;
          background: yellow;
        }
  %body
    .container
      .row
        .span12
          = yield
    .container
      =yield(:footer)
    = javascript_include_tag "application"
    =yield(:javascripts)