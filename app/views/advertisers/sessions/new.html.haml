-@show_top = true
.row
  .col-md-5.col-md-offset-1
    %h3
      Ads
      %small
        Sign in to your account
    %h4
      Track and Monitor
    %p Check how your ads are performing
    %h4
      Optimize
    %p Fine tune your ads to improve their performance
  .col-md-4

    = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-signin' } ) do |f|
      %h2 Sign in
      = f.text_field :username, :autofocus => true, class: 'form-control', placeholder: 'Username'
      = f.password_field :password, class: 'form-control', placeholder: 'Password'

      %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Sign In


      -if devise_mapping.rememberable?
        = f.check_box :remember_me
        = f.label :remember_me

      %br/
      = render "advertisers/shared/links"
