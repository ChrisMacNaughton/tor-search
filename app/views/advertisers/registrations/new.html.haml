-@show_top = true
.row
  .col-md-5.col-md-offset-1

    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-signin' } ) do |f|
      %h2 Sign Up
      = devise_error_messages!
      = f.text_field :username, :autofocus => true, class: 'form-control', placeholder: 'Username'
      = f.email_field :email, class: 'form-control', placeholder: 'Email'
      = f.password_field :password, class: 'form-control', placeholder: 'Password'
      = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmation'
      %button.btn.btn-lg.btn-primary.btn-block{type: :submit} Sign Up

      %br/
      = render "advertisers/shared/links"
