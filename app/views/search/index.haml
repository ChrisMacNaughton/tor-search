.home
  .row.span10.offset2
    .logo-large
  .row.span12.offset2
    =render partial: 'search_bar', locals: {disabled: !@search.errors.empty?}
  .row.span12.offset2
    -if @search.errors.empty?
      %p.muted
        =t 'search.around'
        =number_with_precision @search.indexed, delimiter: ',', significant: true, precision: 2, strip_insignificant_zeros: true, separator: '.', locale: I18n.locale
        =t 'search.pages_indexed'
    -else
      %p.muted Search is offline for the moment, we are looking into it
  .row.span10.offset1
    - if DateTime.now < DateTime.parse('January 1st, 2014 21:27:00 EST') && DateTime.now >= DateTime.parse('December 26th, 2013 21:27:00 EST')
      -# RoadSilk Ad
      %a.thumbnail{href: 'http://yjhzeedl5osagmmr.onion'}
        =image_tag asset_path('roadsilk-banner.jpg'), alt: 'RoadSilk', size: '728x90'
    -elsif DateTime.now < DateTime.parse('January 22nd, 2014 15:15:00 EST') && DateTime.now >= DateTime.parse('January 7th, 2014 15:15:00 EST')
      -# Airbrake Ad
      %a.thumbnail{href: 'https://airbrake.io?r=torsearch'}
        =image_tag asset_path('airbrake-banner.png'), alt: 'AirBrake.io', size: '728x90'
    -elsif DateTime.now < DateTime.parse('March 2nd, 2014 00:00:00 UTC') && DateTime.now >= DateTime.parse('January 23nd, 2014 09:00:00 EST')
      -# PremiumTor Ad
      %a.thumbnail{href: 'http://uizxxzdowrh6rrys.onion'}
        =image_tag asset_path('premiumtor-banner.png'), alt: 'PremiumTor', size: '728x90'
    -else
      -# Default Ad
      %a.thumbnail{href: 'mailto:sales@torsearch.es'}
        =image_tag asset_path('banner.png'), alt: 'Advertise here!', size: '728x90'
    %br/
-content_for(:footer) do
  #footer_home
    .row-fluid
      #footer_home_left
        =link_to t(:submit_a_domain), add_link_path
      #footer_home_right
        =render partial: 'mixpanel_badge'
      .span6.offset3
        %p
          =t(:bitcoin_note)
          #{TorSearch::Application.config.tor_search.bitcoin_address}
