.home
  .row.span10.offset2
    .logo-large
  .row.span12.offset2
    =render partial: 'search_bar', locals: {disabled: !@search.errors.empty?}
  .row.span12.offset2
    -if @search.errors.empty?
      %p.muted
        =number_with_precision @search.indexed, delimiter: ',', significant: true, precision: 5, strip_insignificant_zeros: true
        pages indexed
    -else
      %p.muted Search is offline for the moment, we are looking into it
-content_for(:footer) do
  #footer_home
    .row-fluid
      #footer_home_left
        =link_to "Submit a Domain", add_link_path
      #footer_home_right
      .span6.offset3
        %p
          Bitcoin Donations Accepted at #{TorSearch::Application.config.tor_search.bitcoin_address}