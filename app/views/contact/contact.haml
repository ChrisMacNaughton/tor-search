-content_for :title do
  Contact -

=form_for :message do |f|
  =f.label :name, "Name"
  =f.text_field :name, class: 'span6', required: true
  =f.label :contact_method, "Contact Method"
  =f.email_field :contact_method, class: 'span6', placeholder: "Email: name@example.com", required: true, email: true
  =f.label :text
  =f.text_area :text, class: 'span6', rows: 6, required: true
  =f.hidden_field :advertising, value: @advertising.present? ? true : false
  %br
  =f.submit "Send Message"